<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background gradient -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#1E3A8A"
                android:centerColor="#3B82F6"
                android:endColor="#1E40AF"
                android:angle="135" />
        </shape>
    </item>
    
    <!-- Logo/Icon -->
    <item android:gravity="center">
        <shape android:shape="oval">
            <solid android:color="#FFFFFF" />
            <size android:width="120dp" android:height="120dp" />
        </shape>
    </item>
    
    <!-- Book icon -->
    <item android:gravity="center">
        <shape android:shape="rectangle">
            <solid android:color="#1E3A8A" />
            <size android:width="60dp" android:height="40dp" />
            <corners android:radius="4dp" />
        </shape>
    </item>
    
    <!-- App name at bottom -->
    <item android:gravity="bottom|center_horizontal" android:bottom="100dp">
        <shape android:shape="rectangle">
            <solid android:color="#00000000" />
            <size android:width="200dp" android:height="40dp" />
        </shape>
    </item>
</layer-list>
